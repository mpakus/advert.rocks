<%= content_for :page_title, t('videos.page_title') + ' - ' + @video.title %>

<div class="col-lg-12">
  <%= @video.embed_code.html_safe %>

  <div class="author-info">
    <div class="avatar">
      <%= image_tag gravatar_url(@video.user.email) %>
    </div>
    <div class="bio">
      <h5><span><%= t('videos.author') %>:</span> <%= @video.user.human_name %></h5>
      <p>
        <%= favorite_video(@video, current_user) if user_signed_in? %>
        <%= rate_video(@video, current_user, :like) if user_signed_in? %>
        <span class="video-rating"><%= @video.rating %></span>
        <%= rate_video(@video, current_user, :dislike) if user_signed_in? %>
      </p>
    </div>
  </div>

  <%= render 'comments' %>

</div>
